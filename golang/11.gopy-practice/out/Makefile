# Makefile for python interface for package slices.
# File is generated by gopy. Do not edit.
# gopy build -output=out -vm=python3 .

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/Users/rrossmil/.venv/gopy/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/opt/homebrew/opt/python@3.11/Frameworks/Python.framework/Versions/3.11/include/python3.11
LDFLAGS = -L/opt/homebrew/opt/python@3.11/Frameworks/Python.framework/Versions/3.11/lib -lpython3.11 -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make -vm=python3 .

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm slices.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w slices.go
	# generate slices_go$(LIBEXT) from slices.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o slices_go$(LIBEXT) slices.go
	# use pybindgen to build the slices.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _slices$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated slices.py python wrapper imports this c-code package
	
	$(GCC) slices.c -dynamiclib slices_go$(LIBEXT) -o _slices$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


